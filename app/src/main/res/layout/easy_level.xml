<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TwoPlayers.EasyLevel">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/one_player_bg"
        android:freezesText="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/player_two_score"
        android:textColor="@color/playerTextColor"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/txt_player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/one_player_bg"
        android:freezesText="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/player_one_score"
        android:textColor="@color/playerTextColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/reset"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/btn_00"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/empty"
        android:freezesText="true"
        android:scaleType="fitCenter"
        android:textSize="1sp"
        app:layout_constraintBottom_toTopOf="@+id/viewH"
        app:layout_constraintEnd_toStartOf="@+id/viewV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_player_2"
        tools:ignore="ContentDescription,SmallSp" />

    <Button
        android:id="@+id/btn_01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/empty"
        android:freezesText="true"
        android:textSize="1sp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/viewH"
        app:layout_constraintEnd_toStartOf="@+id/view2V"
        app:layout_constraintStart_toEndOf="@+id/viewV"
        app:layout_constraintTop_toBottomOf="@+id/txt_player_2"
        tools:ignore="ContentDescription,SmallSp" />

    <Button
        android:id="@+id/btn_02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/empty"
        android:freezesText="true"
        android:textSize="1sp"
        app:layout_constraintBottom_toTopOf="@+id/viewH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view2V"
        app:layout_constraintTop_toBottomOf="@+id/txt_player_2"
        tools:ignore="ContentDescription,SmallSp" />

    <Button
        android:id="@+id/btn_10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/empty"
        android:freezesText="true"
        android:textSize="1sp"
        app:layout_constraintBottom_toTopOf="@+id/view2H"
        app:layout_constraintEnd_toStartOf="@+id/viewV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewH"
        tools:ignore="ContentDescription,SmallSp" />

    <Button
        android:id="@+id/btn_11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/empty"
        android:freezesText="true"
        android:textSize="1sp"
        app:layout_constraintBottom_toTopOf="@+id/view2H"
        app:layout_constraintEnd_toStartOf="@+id/view2V"
        app:layout_constraintStart_toEndOf="@+id/viewV"
        app:layout_constraintTop_toBottomOf="@+id/viewH"
        tools:ignore="ContentDescription,SmallSp" />

    <Button
        android:id="@+id/btn_12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/empty"
        android:freezesText="true"
        android:textSize="1sp"
        app:layout_constraintBottom_toTopOf="@+id/view2H"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/view2V"
        app:layout_constraintTop_toBottomOf="@+id/viewH"
        tools:ignore="ContentDescription,SmallSp" />

    <Button
        android:id="@+id/btn_20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/empty"
        android:freezesText="true"
        android:textSize="1sp"
        app:layout_constraintBottom_toTopOf="@id/txt_player_1"
        app:layout_constraintEnd_toStartOf="@+id/viewV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2H"
        tools:ignore="ContentDescription,SmallSp" />

    <Button
        android:id="@+id/btn_21"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/empty"
        android:freezesText="true"
        android:textSize="1sp"
        app:layout_constraintBottom_toTopOf="@id/txt_player_1"
        app:layout_constraintEnd_toStartOf="@+id/view2V"
        app:layout_constraintStart_toEndOf="@+id/viewV"
        app:layout_constraintTop_toBottomOf="@+id/view2H"
        tools:ignore="ContentDescription,SmallSp" />

    <Button
        android:id="@+id/btn_22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/empty"
        android:freezesText="true"
        android:textSize="1sp"
        app:layout_constraintBottom_toTopOf="@id/txt_player_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view2V"
        app:layout_constraintTop_toBottomOf="@+id/view2H"
        tools:ignore="ContentDescription,SmallSp" />

    <View
        android:id="@+id/viewH"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:background="@color/linesAccent"
        app:layout_constraintBottom_toTopOf="@+id/btn_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_00" />

    <View
        android:id="@+id/view2H"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:background="@color/linesAccent"
        app:layout_constraintBottom_toTopOf="@+id/btn_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_10" />

    <View
        android:id="@+id/viewV"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="128dp"
        android:background="@color/linesAccent"
        app:layout_constraintBottom_toTopOf="@+id/txt_player_1"
        app:layout_constraintEnd_toStartOf="@+id/btn_01"
        app:layout_constraintStart_toEndOf="@+id/btn_00"
        app:layout_constraintTop_toBottomOf="@+id/txt_player_2" />

    <View
        android:id="@+id/view2V"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="128dp"
        android:background="@color/linesAccent"
        app:layout_constraintBottom_toTopOf="@+id/txt_player_1"
        app:layout_constraintEnd_toStartOf="@+id/btn_02"
        app:layout_constraintStart_toEndOf="@+id/btn_01"
        app:layout_constraintTop_toBottomOf="@+id/txt_player_2" />

</androidx.constraintlayout.widget.ConstraintLayout>